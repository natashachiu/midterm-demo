<!DOCTYPE html>
<html lang="en">

<head>
  <title>Story</title>

  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/css/bootstrap.min.css"
    integrity="sha384-GJzZqFGwb1QTTN6wy59ffF1BuGJpLSa9DkKMp0DgiMDm4iYMj70gZWKYbI706tWS" crossorigin="anonymous" />
  <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" />
  <link rel="stylesheet" href="/vendor/border-box.css" />
  <link rel="stylesheet" href="/styles/main.css" />
  <link rel="stylesheet" href="/styles/layout.css" />


  <script src="/vendor/jquery-3.0.0.js"></script>
  <script defer src="/scripts/app.js"></script>
</head>

<body>
  <%- include('partials/_header') %>
    <h1>
      <%= story.title %>
    </h1>

    <article>
      <p>
        <%= story.username %>
      </p>
      <p>
        <%= story.created_at %>
      </p>
    </article>

    <section>
      <h4>Description</h4>
      <div>
        <%= story.description %>
      </div>
    </section>
    <section>
      <h2>
        <%= story.completed ? 'Completed' : 'Not Complete' %>
      </h2>
    </section>
    <section>
      <div class="story-section">
        <h4>Story</h4>
        <%= story.content %>
      </div>
    </section>

    <div>
      <% if (!story.completed_at){%>
        <form action="/story/<%= story.story_id %>/contribute" method="get">
          <button class="btn btn-primary" type="submit">Contribute</button>
        </form>
        <% } %>
    </div>


    <section>
      <h4>Contributors</h4>
      <% for (const contribution of addedContributions) { %>

        <div>
          <%= contribution.username %>
        </div>
        <% }%>
    </section>
</body>

</html>